. "${HOME}/dotfiles/lib/util.sh"

# set 256 color term for tmux
TERM="screen-256color"

# Use brew installed variants on macOS
if is_macos; then
  export PATH="/usr/local/bin:$PATH"
  for prog in coreutils ed grep gnu-sed make; do
    export PATH="/usr/local/opt/$prog/libexec/gnubin:$PATH"
  done
fi

# Use vi mode
set -o vi
export EDITOR=/usr/local/bin/nvim

# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/"
[ -n "$PS1" ] && \
    [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
        eval "$("$BASE16_SHELL/profile_helper.sh")"

# Colorized man pages
export MANPAGER="sh -c 'col -bx | bat -l man -p'"

# Use fd for fzf
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# Use bat for preview for <C-t> search
export FZF_CTRL_T_OPTS=" --preview 'bat --color=always --style=numbers {} | head -500'"

# aliases
alias cat='bat'
alias ls='exa'
alias l='exa -lahF'
