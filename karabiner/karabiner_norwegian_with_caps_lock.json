{
  "title": "Toggle Norwegian layout while pressing CapsLock",
    "rules": [
    {
      "description": "Toggle ÆØÅ while pressing CapsLock",
      "manipulators": [
      {
        "from": {
          "key_code": "caps_lock",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "right_option",
          "modifiers": [
            "left_command",
          "left_control"
          ]
        }
        ],
        "type": "basic"
      },
      {
        "from": {
          "key_code": "semicolon",
          "modifiers": {
            "mandatory": [
              "right_option",
            "left_command",
            "left_control"
            ],
            "optional": [
              "left_shift"
            ]
          }
        },
        "to": [
        {
          "key_code": "o",
          "modifiers": [
            "right_option"
          ]
        }
        ],
        "type": "basic"
      },
      {
        "from": {
          "key_code": "quote",
          "modifiers": {
            "mandatory": [
              "right_option",
            "left_command",
            "left_control"
            ],
            "optional": [
              "left_shift"
            ]
          }
        },
        "to": [
        {
          "key_code": "quote",
          "modifiers": [
            "right_option"
          ]
        }
        ],
        "type": "basic"
      },
      {
        "from": {
          "key_code": "open_bracket",
          "modifiers": {
            "mandatory": [
              "right_option",
            "left_command",
            "left_control"
            ],
            "optional": [
              "left_shift"
            ]
          }
        },
        "to": [
        {
          "key_code": "a",
          "modifiers": [
            "right_option"
          ]
        }
        ],
        "type": "basic"
      }
      ]
    }
  ]
}
